    {{else}}
    <em>Unknown Author</em>
    {{/if}}
  </h4>

<hr>

	<button class="btn btn-inverse btn-lg" id="newArticleBtn">Add New Festival</button>
</div>

<br>

<form id="newArticle" action="/dashboard" method="POST">
  <div class="form-group">
    <label for="articleTitle">Title</label>
    <input name="title" type="text" class="form-control" id="articleTitle">
  </div>
  <div class="form-group">
    <label for="articleImage">Image Url</label>
    <input name="image" type="text" class="form-control" id="articleImage" >
  </div>
  <div class="form-group">
    <label for="articleLocation">location</label>
    <input name="location" type="text" class="form-control" id="articleLocation">
  </div>
  <div class="form-group">
    <label for="articleDate">date</label>
    <input name="date" type="text" class="form-control" id="articleDate">
  </div>
  <div class="form-group">
    <label for="articleContent">content</label>
    <textarea name="content" class="form-control" id="articleContent"></textarea>
  </div>

  <button type="submit" class="btn btn-inverse btn-lg">Add new Article</button>
</form>

